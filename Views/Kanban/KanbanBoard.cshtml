@model KanbanBoardViewModel

<h3 class="d-flex justify-content-between align-items-center mb-4">
    Progress Board
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal">
        <i class="bi bi-plus-circle me-1"></i> Create Task
    </button>
</h3>

@await Html.PartialAsync("../Shared/_CreateTaskPartial", new TaskItem(),
            new ViewDataDictionary(ViewData) {
        { "ModalId", "createTaskModal" },
        { "IsEdit", false }
    })

@if (TempData["Message"] != null)
{
    <div id="floating-message" class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<form asp-action="KanbanBoard" asp-controller="Kanban" method="get" class="mb-4">
    <div class="d-flex align-items-center">
        <label for="groupBySelect" class="form-label fw-bold me-2">Group by:</label>
        <select name="groupBy" id="groupBySelect" class="form-select w-auto" onchange="this.form.submit()">
            <option value="None" selected="@(Model.GroupBy == "None")">None</option>
            <option value="AssignedTo" selected="@(Model.GroupBy == "AssignedTo")">Assigned To</option>
            <option value="Priority" selected="@(Model.GroupBy == "Priority")">Priority</option>
            <option value="Group" selected="@(Model.GroupBy == "Group")">Group</option>
        </select>
    </div>
</form>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info-subtle fw-bold text-center">To Do</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-warning-subtle fw-bold text-center">In Progress</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-success-subtle fw-bold text-center">Done</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary-subtle fw-bold text-center">Closed</div>
        </div>
    </div>
</div>

<div id="globalSpinner" class="d-none position-fixed top-50 start-50 translate-middle">
    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
        <span >Loading...</span>
    </div>
</div>

@foreach (var group in Model.GroupedTasks)
{
    <div class="mb-4">
        <h5 class="fw-bold text-secondary border-0 pb-2 mb-3">@group.GroupKey</h5>
        <div class="row g-3" data-groupby="@Model.GroupBy">
            @await Html.PartialAsync("_KanbanColumn",
                     new KanbanColumnViewModel("To Do", "bg-info-subtle", group.ToDo, group.GroupKey, "ToDo"))
            @await Html.PartialAsync("_KanbanColumn",
                     new KanbanColumnViewModel("In Progress", "bg-warning-subtle", group.InProgress, group.GroupKey, "InProgress"))
            @await Html.PartialAsync("_KanbanColumn",
                     new KanbanColumnViewModel("Done", "bg-success-subtle", group.Done, group.GroupKey, "Done"))
            @await Html.PartialAsync("_KanbanColumn",
                     new KanbanColumnViewModel("Closed", "bg-primary-subtle", group.Closed, group.GroupKey, "Closed"))
        </div>
    </div>
}

@await Html.PartialAsync("../Shared/_CreateTaskPartial", new Tasque.Models.TaskItem(), new ViewDataDictionary(ViewData) {
    { "ModalId", "editTaskModal" },
    { "IsEdit", true }
})

<link rel="stylesheet" href="~/css/kanbanboard.css" asp-append-version="true" />
<script src="~/js/kanbanboard.js"></script>
